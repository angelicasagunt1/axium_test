{% extends 'base.html.twig' %}

{% block title %}Detalle de Condición de IVA{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">
                <i class="bi bi-file-earmark-text"></i> Condición de IVA
            </h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered align-middle">
                <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ tax_condition.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Código</th>
                    <td>{{ tax_condition.code }}</td>
                </tr>
                <tr>
                    <th scope="row">Etiqueta</th>
                    <td>{{ tax_condition.label }}</td>
                </tr>
                <tr>
                    <th scope="row">Alícuota (%)</th>
                    <td>{{ tax_condition.rate }}</td>
                </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <div>
                    <a href="{{ path('app_tax_condition_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al listado
                    </a>
                    <a href="{{ path('app_tax_condition_edit', {'id': tax_condition.id}) }}" class="btn btn-outline-primary ms-2">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                </div>
                <div>
                    {{ include('tax_condition/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
